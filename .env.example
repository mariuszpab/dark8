# DARK8 OS - Environment Configuration
# Copy to .env and adjust values for your environment

# ============================================================================
# SYSTEM
# ============================================================================
DARK8_ENV=development
DARK8_DEBUG=true
DARK8_LOG_LEVEL=INFO
DARK8_DATA_DIR=~/.dark8/data
DARK8_CACHE_DIR=~/.dark8/cache

# ============================================================================
# OLLAMA (Local LLM Backend)
# ============================================================================
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=mistral            # Options: mistral, neural-chat, llama2
OLLAMA_TEMPERATURE=0.3          # Lower = more deterministic
OLLAMA_CONTEXT_WINDOW=8096

# ============================================================================
# PostgreSQL Database (Optional)
# ============================================================================
DATABASE_URL=sqlite:///./dark8.db
# DATABASE_URL=postgresql://user:password@localhost:5432/dark8

# ============================================================================
# Redis Cache (Optional)
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=false

# ============================================================================
# Vector Database (Chroma)
# ============================================================================
CHROMA_DB_PATH=~/.dark8/vector_db
CHROMA_ENABLED=true

# ============================================================================
# Web Browser Configuration
# ============================================================================
BROWSER_HEADLESS=false
BROWSER_TIMEOUT=30
DUCKDUCKGO_ENABLED=true

# ============================================================================
# API Server
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# ============================================================================
# NLP Configuration
# ============================================================================
NLP_MODEL_NAME=bert-base-multilingual-cased
NLP_INTENT_THRESHOLD=0.7
NLP_ENTITY_THRESHOLD=0.5

# ============================================================================
# Security
# ============================================================================
SECRET_KEY=your-secret-key-here-change-in-production
ENCRYPTION_KEY=your-encryption-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================================================
# GitHub Integration (Optional)
# ============================================================================
GITHUB_TOKEN=
GITHUB_USERNAME=

# ============================================================================
# Logging
# ============================================================================
LOG_FORMAT=json
LOG_FILE=~/.dark8/logs/dark8.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=10

# ============================================================================
# Development
# ============================================================================
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
DARK8_HOT_RELOAD=true
